<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.WelcomeApp">
        <!-- Ảnh nền mờ -->
        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            android:alpha="0.3" />

        <!-- Nội dung chính -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:layout_gravity="center">

            <!-- Logo -->


            <!-- Welcome text -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="290dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_synicloth" />

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WELCOME"
                android:textSize="52sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center" />

            <!-- Logo -->
            <ImageView
                android:id="@+id/logo1"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:src="@drawable/logo_synicloth001"
                android:layout_gravity="center" />

            <!-- Nút Đăng nhập -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ĐĂNG NHẬP"
                android:textAllCaps="true"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_dark_button"
                android:backgroundTint="@null"/>

            <!-- Nút Đăng ký -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ĐĂNG KÝ"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="12dp"
                android:textColor="#000000"
                android:background="@drawable/border_button"
                android:backgroundTint="@null"/>

            <!-- Đăng nhập quyền Admin -->
            <TextView
                android:id="@+id/shipperLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_login_text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </RelativeLayout>